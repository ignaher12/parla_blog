---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<nav>
		<div class="logo-container">
			<img src="/imgs/logo.png" alt="Parla di Viaggi" />
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">Sobre nosotros</HeaderLink>
		</div>
		<div class="social-links">
			<a
				href="https://www.instagram.com/parladiviaggi/"
				target="_blank"
				class="text-gray-600 hover:text-pink-600 transition-colors"
			>
				<span class="sr-only">Segu√≠ a Parla di Viaggi en Instagram</span
				>
				<svg
					viewBox="0 0 24 24"
					aria-hidden="true"
					width="32"
					height="32"
					fill="currentColor"
				>
					<path
						d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	/* Desktop Layout */
	nav {
		display: flex;
		align-items: center;
		padding: 1rem 0;
		position: relative; /* Needed for absolute positioning context */
		justify-content: space-between;
	}

	.logo-container {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex: 0 0 auto;
		z-index: 2; /* Ensure clickable */
	}

	.logo-container img {
		height: 40px;
		width: auto;
	}

	.internal-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		/* Absolute centering technique */
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		width: auto;
		z-index: 1;
	}

	.social-links {
		display: flex;
		flex: 0 0 auto;
		gap: 0.5rem;
		z-index: 2;
	}

	nav a {
		padding: 0.5em 0;
		color: var(--black);
		border-bottom: 2px solid transparent; /* slightly thinner */
		text-decoration: none;
		font-weight: 500;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		nav {
			display: flex;
			flex-direction: column;
			gap: 1rem;
			padding: 0.5rem 0;
		}

		.internal-links {
			position: static; /* Reset absolute positioning */
			transform: none;
			width: 100%;
			justify-content: center;
			gap: 1rem;
			font-size: 0.9rem;
		}

		.logo-container {
			flex-direction: column; /* Stack logo and text on very small screens? Or keep row? Row is usually fine */
			justify-content: center;
		}

		.social-links {
			display: none; /* Keep hidden as per original or un-hide if needed */
		}
	}
</style>
