<style>
    .whatsapp-wrapper {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Main Button */
    .whatsapp-main {
        width: 60px;
        height: 60px;
        background-color: #25d366;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        transition:
            transform 0.3s ease,
            background-color 0.3s;
    }

    .whatsapp-wrapper:hover .whatsapp-main {
        background-color: #1ebc57;
        transform: rotate(45deg); /* Optional: visual clue of active state */
    }

    /* Options Menu */
    .whatsapp-options {
        position: absolute;
        bottom: 60px; /* Start right above the button */
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding-bottom: 15px; /* Invisible bridge for hover */
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px) scale(0.8);
        transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        pointer-events: none;
        width: max-content; /* Ensure width fits content */
        align-items: flex-end; /* Align to right */
    }

    .whatsapp-wrapper:hover .whatsapp-options {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
        pointer-events: auto;
    }

    /* Individual Option */
    .contact-option {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        text-decoration: none;
        position: relative;
    }

    .contact-btn {
        width: 50px;
        height: 50px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #333;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition:
            transform 0.2s,
            background-color 0.2s;
    }

    .contact-option:hover .contact-btn {
        background-color: #f0f0f0;
        transform: scale(1.1);
        color: #25d366;
    }

    /* Tooltip (Label) */
    .tooltip {
        position: absolute;
        right: 60px;
        background: #333;
        color: white;
        padding: 5px 12px;
        border-radius: 6px;
        font-size: 0.9rem;
        white-space: nowrap;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transform: translateX(10px);
        transition: all 0.2s ease;
        pointer-events: none;
    }

    /* Little triangle for tooltip */
    .tooltip::after {
        content: "";
        position: absolute;
        top: 50%;
        right: -6px;
        transform: translateY(-50%);
        border-width: 6px 0 6px 6px;
        border-style: solid;
        border-color: transparent transparent transparent #333;
    }

    .contact-option:hover .tooltip {
        opacity: 1;
        transform: translateX(0);
    }
    .label-mobile {
        display: none;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .whatsapp-wrapper {
            bottom: 20px;
            right: 20px;
        }
        .tooltip {
            display: none;
        }
        .contact-option .label-mobile {
            /* If we wanted always-visible labels on mobile */
        }
        .label-mobile {
            display: block;
            position: absolute;
            right: 60px;
            color: white;
            text-shadow: 2px 2px 0px #000;
            padding: 5px 12px;
            border-radius: 6px;
            font-size: 0.9rem;
            white-space: nowrap;
        }
    }
</style>
